{% extends 'base.html.twig' %}
{% block title %}Crear_Categoria{% endblock %}
{% block body %}
<a style="margin-right:3%;" class="btn btn-primary" href="{{ path('controlador_category') }}" role="button">Regresar</a>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Crear Categoria</h5>
      </div>
      {{ form_start(Form_Crear)}}
      <div class="modal-body">
        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Nombre de Categoria</span>
            {{ form_widget(Form_Crear.name,{'attr':{'class':'form-control'}})}}
            {{ form_errors(Form_Crear.name)}}
        </div>
        <div class="form-check form-switch">
            {{ form_widget(Form_Crear.active,{'attr':{'class':'form-check-input'}})}}
            {{ form_errors(Form_Crear.active)}}
           <label class="form-check-label" for="flexSwitchCheckDefault">Estado del catalogo</label>
        </div>
      </div>
      <div class="modal-footer">
        {{ form_widget(Form_Crear.submit, {'attr': {'class': 'btn btn-primary'}})}}
      </div>
       {{ form_end(Form_Crear) }}
    </div>
  </div>
{% endblock %}